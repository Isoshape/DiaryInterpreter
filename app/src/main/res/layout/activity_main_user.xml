<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.bigmac.diaryinterpreter.MainUserActivity"
    android:background="#FFFFFF">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/tool_bar"
        ></include>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/primQuizLayout"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:gravity="center_horizontal">

     <!--<TextView-->
         <!--android:layout_width="wrap_content"-->
         <!--android:layout_height="wrap_content"-->
         <!--android:layout_weight="1"-->
         <!--android:text="Velkommen"-->
         <!--android:id="@+id/welcomeTextEdit"/>-->

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gå til dagbog"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="50dp"
            android:id="@+id/InterpreterBtn"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/book"
            android:elegantTextHeight="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test knap"
            android:id="@+id/testbtn"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dine mulige hændelser"
            android:gravity="center_horizontal"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/eventsLayout"
        android:paddingTop="10dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
            android:gravity="center_horizontal"
        android:layout_weight="1"
        android:id="@+id/timeEvents">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tidshændelser"
                android:gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:layout_weight="1"
            android:id="@+id/normalEvents">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Almindelige hændelser"
                android:gravity="center_horizontal"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>


</LinearLayout>
